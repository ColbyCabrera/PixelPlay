<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:theme="@style/Theme.Material3.DynamicColors.DayNight"
    android:background="@drawable/widget_preview_background"
    android:gravity="center_vertical"
    android:padding="12dp">

    <!-- Album art placeholder -->
    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/widget_preview_button_background"
        android:src="@drawable/rounded_album_24"
        android:padding="12dp"
        app:tint="?attr/colorOnPrimaryContainer" />

    <!-- Title and artist placeholder -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Title"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Play/Pause button placeholder -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/rounded_play_arrow_24"
        android:background="@drawable/widget_preview_button_background"
        android:padding="8dp"
        app:tint="?attr/colorOnPrimaryContainer"
        />

</LinearLayout>
